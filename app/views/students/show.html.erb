<div class="container mt-4">
  <div class="card">
    <div class="card-header bg-purple text-white">
      <h2 class="mb-0">Student Details</h2>
    </div>
    <div class="card-body">
      <div class="row mb-3">
        <div class="col-md-3 fw-bold">Name:</div>
        <div class="col-md-9"><%= @student.name %></div>
      </div>

      <div class="row mb-3">
        <div class="col-md-3 fw-bold">Email:</div>
        <div class="col-md-9"><%= @student.email %></div>
      </div>

      <div class="row mb-3">
        <div class="col-md-3 fw-bold">Student Number:</div>
        <div class="col-md-9"><%= @student.student_number %></div>
      </div>

      <div class="row mb-3">
        <div class="col-md-3 fw-bold">Course:</div>
        <div class="col-md-9"><%= @student.course %></div>
      </div>

      <div class="mt-4">
        <%= link_to 'Edit', edit_student_path(@student), class: 'btn btn-primary' %>
        <%= button_to 'Delete', student_path(@student), method: :delete, class: 'btn btn-danger', form: { style: 'display: inline-block;' } %>
        <%= link_to 'Back', students_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>

<% content_for :styles do %>
  <style>
    .bg-purple {
      background-color: #800080;
    }
  </style>
<% end %>
